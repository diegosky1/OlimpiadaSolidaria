<div class="page-header">
	<h1>Editar registro</h1>
</div>
<%= render partial: 'shared/form_errors', locals: { target: @study_session } %>
<%= form_for [:admin, @user, @study_session], html: { :class => 'form-horizontal', role: 'form' } do |f| %>
	<div class="form-group">
		<%= f.label :hours, 'Horas', :class => 'control-label col-sm-2' %>
		<div class="col-sm-6">
			<%= f.number_field :hours, placeholder: "Horas", :class => 'form-control' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-3">
			<%= link_to 'Cancelar', admin_user_study_sessions_url(@user), :class => 'btn btn-default btn-lg btn-block' %>
		</div>
		<div class="col-sm-3">
			<%= f.submit 'Continuar', :class => 'btn btn-primary btn-lg btn-block' %>
		</div>
	</div>
<% end %>