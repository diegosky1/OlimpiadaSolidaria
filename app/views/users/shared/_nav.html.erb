<div class="navbar-right">
	<%= form_tag search_users_url, role: 'form', :class => 'navbar-form navbar-left space-top-medium' do %>
		<div id="navbar-search" class="form-group">
			<%= text_field_tag :query, @query, :class => "search-input form-control", placeholder: "Busca a tus amigos..." %>
			<span id="search-icon">
				<i class="glyphicon glyphicon-search"></i>
			</span>
		</div>
	<% end %>
	<ul class="nav navbar-nav">
		<li>	
	        <ul class="nav navbar-nav navbar-right">
		        <li class="dropdown">
			        <%= link_to '#', :class => 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
				    <img  class="dropdown-customimg img-circle"  <%= image_tag @current_user.avatar.thumb.url %>  <%= @current_user.full_name %> <b class="caret"></b>
				    <%end%>
				    <ul class="dropdown-menu">
